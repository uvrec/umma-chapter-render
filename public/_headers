# Prevent caching of HTML files to ensure fresh navigation
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache

# Service worker should not be cached
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Version check file - never cache (for update detection)
/version.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache

# Manifest should have short cache
/manifest.webmanifest
  Cache-Control: max-age=3600

# Static assets can be cached long-term (they have hashed filenames)
/assets/*
  Cache-Control: public, max-age=31536000, immutable
